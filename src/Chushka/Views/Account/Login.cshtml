@model Eventures.Web.ViewModels.LogInInputModel
<main class="mt-3">
    <h1 class="text-center">Login</h1>
    <form class="mx-auto col-md-5" method="post" asp-controller="Account" asp-action="Login">
        <hr class="hr-2" style="background-color: #AFEEEE" />
        <div class="form-group">
            <b><label asp-for="Username" class="text-center col-md-12"></label></b>
            <input asp-for="Username" class="form-control" placeholder="Username...">
        </div>
        <div class="form-group">
            <b><label asp-for="Password" class="text-center col-md-12"></label></b>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
        </div>
        <hr class="hr-2" style="background-color: #AFEEEE" />
        <div class="d-flex justify-content-center">
            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" checked>
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>
        </div>
        <hr class="hr-2" style="background-color: #AFEEEE" />
        <div class="d-flex justify-content-center mb-3">
            <button type="submit" class="btn Eventures-bg-color">Login</button>
        </div>
        <div class="d-flex justify-content-center mb-2">
            <a asp-controller="Home" asp-action="Index" class="nav-link-blue">Forgot your password?</a>
        </div>
        <div class="d-flex justify-content-center">
            <a asp-controller="Account" asp-action="Register" class="nav-link-blue">Register as a new user</a>
        </div>
    </form>
</main>