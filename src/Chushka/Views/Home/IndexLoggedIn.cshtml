<main>
    <div class="jumbotron mt-3 Eventures-bg-color">
        @if (!this.User.IsInRole("Administrator"))
        {
            <h1 class="text-center">Welcome, @this.User.Identity.Name!</h1>
        }
        else
        {
            <h1 class="text-center">Greetings, Administrator - @this.User.Identity.Name!</h1>
        }
        <hr class="hr-2" style="background-color: gray" />
        @if (!this.User.IsInRole("Administrator"))
        {
            <h2 class="text-center color-gray">Eventures wishes you an exciting experience.</h2>
        }
        else
        {
            <h2 class="text-center color-gray">Enjoy your work.</h2>
        }
    </div>
</main>