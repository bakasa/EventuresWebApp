@model Eventures.App.ViewModels.Events.CreateEventInputModel
<main class="mt-3">
    <h1 class="text-center">Create Event</h1>
    <hr class="half-width hr-2" style="background-color: #AFEEEE" />
    <form class="mx-auto half-width" method="post" asp-controller="Events" asp-action="Create">
        <div class="row d-flex justify-content-between">
            <div class="form-group col-md-6">
                <b><label asp-for="Name" class="text-center col-md-12"></label></b>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <b><label asp-for="Place" class="text-center col-md-12"></label></b>
                <input asp-for="Place" class="form-control" placeholder="Place...">
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" style="background-color: #AFEEEE" />
        <div class="row d-flex justify-content-between">
            <div class="form-group col-md-6">
                <b><label asp-for="Start" class="text-center col-md-12"></label></b>
                <input asp-for="Start" type="text" class="form-control" placeholder="Start...">
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <b><label asp-for="End" class="text-center col-md-12"></label></b>
                <input asp-for="End" type="text" class="form-control" placeholder="End...">
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" style="background-color: #AFEEEE" />
        <div class="row d-flex justify-content-between">
            <div class="form-group col-md-6">
                <b><label asp-for="TotalTickets" class="text-center col-md-12"></label></b>
                <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets...">
                <span asp-validation-for="TotalTickets" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <b><label asp-for="PricePerTicket" class="text-center col-md-12"></label></b>
                <input asp-for="PricePerTicket" type="text" class="form-control" placeholder="Price Per Ticket...">
                <span asp-validation-for="PricePerTicket" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" style="background-color: #AFEEEE" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn Eventures-bg-color">Create Event</button>
        </div>
    </form>
</main>