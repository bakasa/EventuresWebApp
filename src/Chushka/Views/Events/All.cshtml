@model Eventures.App.ViewModels.Events.AllEventsViewModel

<main class="mt-3">
    <div class="mx-auto col-md-11">
        <h1 class="text-center">All Events</h1>
        <hr class="hr-2" style="background-color: #AFEEEE"/>
        <div class="d-flex justify-content-between">
            <table class="table">
                <thead>
                <tr class="row">
                    <th scope="col" class="col-lg-1"><h5>#</h5></th>
                    <th scope="col" class="col-lg-4"><h5>Name</h5></th>
                    <th scope="col" class="col-lg-2"><h5>Start</h5></th>
                    <th scope="col" class="col-lg-2"><h5>End</h5></th>
                    <th scope="col" class="col-lg-3"><h5>Place</h5></th>
                </tr>
                </thead>
                <tbody>
                @for(int i = 0; i < Model.Events.ToList().Count; i++)
                {
                    var currentEvent = Model.Events.ToList()[i];
                    <tr class="row">
                        <th class="col-lg-1"><h5>@(i + 1)</h5></th>
                        <td class="col-lg-4"><h5>@currentEvent.Name</h5></td>
                        <td class="col-lg-2"><h5>@currentEvent.Start.ToString("g")</h5></td>
                        <td class="col-lg-2"><h5>@currentEvent.End.ToString("g")</h5></td>
                        <td class="col-lg-3"><h5>@currentEvent.Place</h5></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</main>